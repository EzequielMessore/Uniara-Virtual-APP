<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_set_files"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_discipline_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_set_files"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="14.5dp"
                android:layout_marginStart="14.5dp">

                <View
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:background="@color/material_light_blue_600"/>

                <ImageView
                    android:id="@+id/iv_transaction_type"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:src="@mipmap/marker_file"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvDisciplineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/material_light_blue_600"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_files"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="@drawable/border_set"
            android:orientation="vertical"
            android:padding="0dp"
            android:visibility="gone">
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>